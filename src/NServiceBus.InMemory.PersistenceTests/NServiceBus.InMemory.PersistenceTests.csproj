<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net452;netcoreapp3.1</TargetFrameworks>
        <NoWarn>$(NoWarn);CA2007</NoWarn>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>..\Test.snk</AssemblyOriginatorKeyFile>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\NServiceBus.Core\NServiceBus.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.6.1" PrivateAssets="All" />
        <PackageReference Include="NUnit3TestAdapter" Version="3.16.1" PrivateAssets="All" />
        <PackageReference Include="Particular.CodeRules" Version="0.3.0" PrivateAssets="All" />
        <PackageReference Include="NUnit" Version="[3.12.0, 4.0.0)" />
    </ItemGroup>

    <ItemGroup>
        <Compile Include="../NServiceBus.PersistenceTesting/**/*.cs" Exclude="../NServiceBus.PersistenceTesting/obj/**/*.*"></Compile>
        <Compile Remove="../NServiceBus.PersistenceTesting/PersistenceTestsConfiguration.cs" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="System.Transactions" />
    </ItemGroup>
</Project>
